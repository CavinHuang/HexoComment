{
  "apps": [{
    "name": "koa-vue-template-server",
    "script": "./app.js",
    "env": {
      "NODE_ENV": "production",
    },
    "env_test": {
      "NODE_ENV": "test"
    },
    "exec_mode": "cluster",
    "instances": 0,
    "max_memory_restart": "150M",
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "log_file": "logs/pm2/combined.outerr.log",
    "error_file": "logs/pm2/err.log",
    "out_file": "logs/pm2/out.log",
    "merge_logs": true
  }]
}